<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{dd.MM.yyyy HH:mm:ss,SSS} [%c] - %m%n"/>
        </layout>
    </appender>
   
    <appender name="logfile" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="hypermanager.log" />
        <param name="MaxFileSize" value="1024KB" />
        <param name="MaxBackupIndex" value="3" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{dd.MM.yyyy HH:mm:ss,SSS} [%c] - %m%n" />
            <!--<param name="ConversionPattern" value="%-4r [%t] (%F:%L) %-5p %c %x - %m%n" />-->
        </layout>
    </appender>


    <!-- hM General logger	-->
    <logger name="com.hypermanager.web">
        <level value="debug" />
    </logger>
  
   
    <!-- hM Service logger --> 
    <logger name="com.hypermanager.web.service">
        <level value="debug" />
    </logger>
   
    <!-- hM DAO logger -->
    <logger name="com.hypermanager.web.dao">
        <level value="debug" />
    </logger>
   
    <!-- hM Launcher logger	-->
    <logger name="com.hypermanager.launcher">
        <level value="debug" />
    </logger>

    <!-- 3rdparty Loggers -->
    <logger name="org.springframework.beans">
        <level value="warn" />
    </logger>
 
    <logger name="org.springframework.jdbc">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.transaction">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.security">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.web">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.jndi">
        <level value="warn" />
    </logger>
   
    <logger name="org.springframework.aop">
        <level value="warn" />
    </logger>
   
    <logger name="org.springframework.core">
        <level value="warn" />
    </logger>
   
    <logger name="log4j.logger.com.atomikos.tomcat.BeanFactory">
        <level value="warn" />
    </logger>
   
    <logger name="io.milton">
        <level value="info" />
    </logger>
    
    <logger name="io.milton.http.webdav.PropFindXmlGenerator ">
        <level value="trace" />
    </logger>
 
 
    <!-- Root Logger -->
    <root>
        <priority value="warn" />
        <appender-ref ref="console" />
        <appender-ref ref="logfile" />
    </root>
 
</log4j:configuration>